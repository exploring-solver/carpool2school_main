{
  "openapi": "3.0.3",
  "info": {
    "title": "Hotel Booking API",
    "description": "Hotel Booking API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5999",
      "description": "Local Server"
    },
    {
      "url": "http://192.168.10.167:5999",
      "description": "Development Server"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "Authentication API's"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Login a user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login Successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          }
        }
      }
    },
    "/hotel/create": {
      "post": {
        "tags": [
          "Hotel"
        ],
        "summary": "Create a new hotel",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/HotelCreateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HotelCreateResponse"
                }
              }
            }
          }
        }
      }
    },
    "/hotel/getAll": {
      "post": {
        "tags": [
          "Hotel"
        ],
        "summary": "Get all Hotels",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetAllHotelResponse"
                }
              }
            }
          }
        }
      }
    },
    "/hotel/get/": {
      "get": {
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "schema": {
              "type": "number"
            }
          }
        ],
        "tags": [
          "Hotel"
        ],
        "summary": "Get Hotel by Id",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HotelGetByIdResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RegisterRequest": {
        "type": "object",
        "properties": {
          "first_name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20,
            "default": "Karnav"
          },
          "last_name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20,
            "default": "Pargi"
          },
          "email": {
            "type": "string",
            "minLength": 6,
            "maxLength": 50,
            "default": "karnav.pargi@bytestechnolab.in"
          },
          "password": {
            "type": "string",
            "minLength": 6,
            "maxLength": 20,
            "default": "test@123"
          },
          "phone": {
            "type": "string",
            "minLength": 10,
            "maxLength": 12,
            "default": "8780498282"
          }
        },
        "required": [
          "first_name",
          "last_name",
          "email",
          "password",
          "phone"
        ]
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "minLength": 6,
            "maxLength": 50,
            "default": "karnav.pargi@bytestechnolab.in"
          },
          "password": {
            "type": "string",
            "minLength": 6,
            "maxLength": 20,
            "default": "test@123"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "HotelCreateRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20,
            "default": "Taj Hotel"
          },
          "description": {
            "type": "string",
            "minLength": 3,
            "maxLength": 200,
            "default": "The Great Taj Hotel at S.P ring road Ahmedabad"
          },
          "room_qty": {
            "type": "number",
            "minLength": 0,
            "maxLength": 4,
            "default": "50"
          },
          "phone": {
            "type": "string",
            "minLength": 10,
            "maxLength": 12,
            "default": "8780498282"
          }
        },
        "required": [
          "name",
          "description",
          "room_qty",
          "phone"
        ]
      },
      "HotelCreateResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "default": "Hotel created successfully"
          }
        }
      },
      "HotelGetByIdRequest": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 9,
            "default": "1"
          }
        },
        "required": [
          "id"
        ]
      },
      "HotelGetByIdResponse": {
        "type": "object",
        "properties": {
          "data": {
              "id": 2,
              "name": "The Grand Marriot",
              "description": "Iconic Marriot hotel at satellite Ahmedabad",
              "room_qty": 2000
            }
        }
      },
      "GetAllHotelResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "default": "Hotel created successfully"
          },
          "data": {}
        }
      },
      "RegisterResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "default": "User registered successfully"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "first_name": {
            "type": "string"
          },
          "last_name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        },
        "required": [
          "token",
          "id",
          "first_name",
          "last_name",
          "email"
        ]
      }
    }
  }
}